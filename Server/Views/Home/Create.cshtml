@model Server.Models.Сountry
@{
    ViewData["Title"] = "Добавление страны";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#MyInput1").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myUl1 li").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
        $("#MyInput2").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myUl2 li").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
    
<form asp-controller="Home" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Название:</label>
        <input asp-for="Name" class="form-control" type="text" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label asp-for="СountryCode">Код:</label>
        <input asp-for="СountryCode" class="form-control" type="text" value="@Model.СountryCode" required />
    </div>

    <div class="form-group">
        <label asp-for="Area">Площадь (в кв. км.):</label>
        <input asp-for="Area" class="form-control" type="text" value="@Model.Area.ToString("0.00")" pattern="[0-9]+([.\,][0-9]+)?" maxlength="18" required />
    </div>

    <div class="form-group">
        <label asp-for="Population">Население:</label>
        <input asp-for="Population" class="form-control" type="number" value="@Model.Population" min="1" max="9999999999" required />
    </div>

    <div class="form-group">
        <label asp-for="Capital.Name">Столица:</label>
        <input asp-for="Capital.Name" id="MyInput1" class="form-control" type="text" value="@Model.Capital.Name" required />
        <ul class="list-group" id="myUl1">
            @foreach (var item in ViewBag.Cities)
            {
                <li class="list-group-item">@item.Name</li>
            }
        </ul>
    </div>

    <div class="form-group">
        <label asp-for="Region.Name">Регион:</label>
        <input asp-for="Region.Name" id="MyInput2" class="form-control" type="text" value="@Model.Region.Name" required />
        <ul class="list-group" id="myUl2">
            @foreach (var item in ViewBag.Regions)
            {
                <li class="list-group-item">@item.Name</li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-primary">Добавить информацию о стране</button>
</form>