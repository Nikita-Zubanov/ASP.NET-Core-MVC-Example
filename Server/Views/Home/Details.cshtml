@model Server.Models.Сountry
@{
    ViewData["Title"] = "Информация о стране";
}

<form asp-controller="Home" asp-action="Edit" 
      asp-route-name="@Model.Name" 
      asp-route-countryCode="@Model.СountryCode" 
      asp-route-area="@Model.Area" 
      asp-route-population="@Model.Population" 
      asp-route-capitalName="@Model.Capital.Name" 
      asp-route-regionName="@Model.Region.Name">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.СountryCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Population)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capital)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Region)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.СountryCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Population)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Capital.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Region.Name)
                </td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Изменить</button>
</form>
